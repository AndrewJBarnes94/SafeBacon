<Window x:Class="SafeBacon.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SafeBacon"
             mc:Ignorable="d" 
             Height="200" Width="400">
    <Grid x:Name="MyGrid">
        <Label Grid.Row="0" Grid.Column="0" Content="username:"/>
        <TextBox Grid.Row="0" Grid.Column="1" x:Name="username"/>

        <Label Grid.Row="1" Grid.Column="0" Content="password"/>
        <PasswordBox Grid.Row="1" Grid.Column="1" x:Name="password"/>

        <Button Grid.Row="2" Grid.ColumnSpan="2" Content="Login" Click="onLoginClick"/>
    </Grid>
</Window>
